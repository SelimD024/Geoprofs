
@using Microsoft.EntityFrameworkCore
@model User;


@{
    Layout = null;
}


<head>
    <title></title>
</head>

<div>
        <form asp-controller="Userauth" asp-action="Register">
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input required type="text" asp-for="Username" class="form-control text-danger"/>
            </div>
            
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="password" min-lenght="8" required asp-for="Password" class="form-control"/>
            </div>
            
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
</div>